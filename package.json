{
  "private": true,
  "scripts": {
    "dev": "concurrently npm:dev:*",
    "dev:next": "next dev",
    "dev:path": "pathpida --ignorePath .gitignore --watch",
    "build": "pathpida --ignorePath .gitignore && next build",
    "start": "next start",
    "lint": "next lint --dir src",
    "lint:fix": "npm run lint --fix",
    "format": "prettier --write --ignore-path .gitignore \"./**/*.{js,jsx,ts,tsx,json,css}\"",
    "test": "jest --env=jsdom --verbose",
    "test:create": "node src/__test__/app/sum.test.js"
  },
  "dependencies": {
    "@emotion/react": "^11.10.4",
    "@emotion/server": "^11.10.0",
    "@mantine/core": "^5.2.4",
    "@mantine/hooks": "^5.2.4",
    "@mantine/next": "^5.2.4",
    "@mantine/notifications": "^5.6.3",
    "@tanstack/react-query": "^4.13.4",
    "@types/recoil": "^0.0.9",
    "axios": "^1.1.3",
    "next": "12.2.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "^3.1.4",
    "recoil": "^0.7.6",
    "socket.io-client": "^4.5.2",
    "swr": "^1.3.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.2.1",
    "@types/node": "18.7.14",
    "@types/react": "18.0.18",
    "@types/react-dom": "^18.0.8",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "autoprefixer": "10.4.8",
    "babel-jest": "^29.2.2",
    "concurrently": "^7.3.0",
    "eslint": "8.23.0",
    "eslint-config-next": "12.2.5",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-sort-keys-custom-order": "^1.0.3",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^29.2.2",
    "jest-css-modules": "^2.1.0",
    "jest-environment-jsdom": "^29.2.2",
    "pathpida": "^0.18.1",
    "postcss": "8.4.16",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "0.1.13",
    "tailwindcss": "3.1.8",
    "typescript": "4.8.2"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "moduleNameMapper": {
      "\\.(css)$": "<rootDir>/node_modules/jest-css-modules"
    }
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  }
}